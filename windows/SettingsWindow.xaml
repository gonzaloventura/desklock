<Window x:Class="DeskLock.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DeskLock Settings"
        Width="500" Height="520"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Topmost="True">

    <TabControl Margin="10">

        <!-- Shortcut Tab -->
        <TabItem Header="Shortcut">
            <StackPanel Margin="20">
                <TextBlock Text="Lock / Unlock Shortcut" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16" />

                <Border Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                        BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                        BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,12">
                    <TextBlock x:Name="ShortcutDisplay"
                               Text="Ctrl+Shift+|"
                               FontSize="28" FontWeight="Medium"
                               HorizontalAlignment="Center" />
                </Border>

                <TextBlock x:Name="RecordingHint"
                           Text=""
                           Foreground="DodgerBlue"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,12" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="RecordButton" Content="Record New Shortcut"
                            Padding="16,8" Margin="0,0,8,0"
                            Click="RecordButton_Click" />
                    <Button Content="Reset to Default"
                            Padding="16,8"
                            Click="ResetShortcut_Click" />
                </StackPanel>

                <TextBlock Text="The shortcut must include at least Ctrl or Alt as a modifier."
                           Foreground="Gray" FontSize="11" Margin="0,20,0,0"
                           TextWrapping="Wrap" />
            </StackPanel>
        </TabItem>

        <!-- Appearance Tab -->
        <TabItem Header="Appearance">
            <StackPanel Margin="20">
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Background Color" VerticalAlignment="Center" />
                    <TextBox x:Name="BgColorBox" Grid.Column="1" Text="#0D0D1F" Margin="0,0,8,0"
                             VerticalAlignment="Center" TextChanged="BgColorBox_TextChanged" />
                    <Button Grid.Column="2" Content="Pick..." Padding="8,4" Click="PickBgColor_Click" />
                </Grid>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Text Color" VerticalAlignment="Center" />
                    <TextBox x:Name="TxtColorBox" Grid.Column="1" Text="#FFFFFF" Margin="0,0,8,0"
                             VerticalAlignment="Center" TextChanged="TxtColorBox_TextChanged" />
                    <Button Grid.Column="2" Content="Pick..." Padding="8,4" Click="PickTxtColor_Click" />
                </Grid>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="40" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Font Size" VerticalAlignment="Center" />
                    <Slider x:Name="FontSizeSlider" Grid.Column="1" Minimum="24" Maximum="200"
                            Value="72" TickFrequency="2" IsSnapToTickEnabled="True"
                            ValueChanged="FontSizeSlider_ValueChanged" />
                    <TextBlock x:Name="FontSizeLabel" Grid.Column="2" Text="72"
                               VerticalAlignment="Center" HorizontalAlignment="Right" />
                </Grid>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="40" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Background Alpha" VerticalAlignment="Center" />
                    <Slider x:Name="BgAlphaSlider" Grid.Column="1" Minimum="0.1" Maximum="1.0"
                            Value="1.0" TickFrequency="0.05" IsSnapToTickEnabled="True"
                            ValueChanged="BgAlphaSlider_ValueChanged" />
                    <TextBlock x:Name="BgAlphaLabel" Grid.Column="2" Text="100%"
                               VerticalAlignment="Center" HorizontalAlignment="Right" />
                </Grid>

                <CheckBox x:Name="BgBlurCheck" Content="Blur Behind Window"
                          Margin="0,0,0,12" Checked="BgBlurCheck_Changed" Unchecked="BgBlurCheck_Changed" />

                <Button Content="Reset to Defaults" Padding="12,6" Margin="0,16,0,0"
                        HorizontalAlignment="Left" Click="ResetDefaults_Click" />
            </StackPanel>
        </TabItem>

        <!-- Content Tab -->
        <TabItem Header="Content">
            <StackPanel Margin="20">
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Lock Text" VerticalAlignment="Center" />
                    <TextBox x:Name="LockTextBox" Grid.Column="1" Text="DESK LOCKED"
                             TextChanged="LockTextBox_TextChanged" />
                </Grid>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Subtitle" VerticalAlignment="Center" />
                    <TextBox x:Name="SubtitleBox" Grid.Column="1"
                             TextChanged="SubtitleBox_TextChanged" />
                </Grid>

                <CheckBox x:Name="ShowClockCheck" Content="Show Clock" IsChecked="True"
                          Margin="0,0,0,8" Checked="ShowClockCheck_Changed" Unchecked="ShowClockCheck_Changed" />
                <CheckBox x:Name="ShowHintCheck" Content="Show Unlock Hint" IsChecked="True"
                          Checked="ShowHintCheck_Changed" Unchecked="ShowHintCheck_Changed" />
            </StackPanel>
        </TabItem>

        <!-- Background Tab -->
        <TabItem Header="Background">
            <StackPanel Margin="20">
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="ImagePathLabel" Text="No image selected"
                               VerticalAlignment="Center" Foreground="Gray"
                               TextTrimming="CharacterEllipsis" />
                    <Button Grid.Column="1" Content="Choose Image..." Padding="8,4"
                            Margin="8,0,0,0" Click="ChooseImage_Click" />
                    <Button x:Name="RemoveImageBtn" Grid.Column="2" Content="Remove"
                            Padding="8,4" Margin="8,0,0,0" Foreground="Red"
                            Click="RemoveImage_Click" Visibility="Collapsed" />
                </Grid>

                <Grid x:Name="OpacityGrid" Margin="0,0,0,12" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="40" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Image Opacity" VerticalAlignment="Center" />
                    <Slider x:Name="ImageOpacitySlider" Grid.Column="1"
                            Minimum="0.05" Maximum="1.0" Value="0.3"
                            TickFrequency="0.05" IsSnapToTickEnabled="True"
                            ValueChanged="ImageOpacitySlider_ValueChanged" />
                    <TextBlock x:Name="OpacityLabel" Grid.Column="2" Text="30%"
                               VerticalAlignment="Center" HorizontalAlignment="Right" />
                </Grid>
            </StackPanel>
        </TabItem>

    </TabControl>
</Window>
